@inherits LayoutComponentBase


@using Microsoft.AspNetCore.Components
@code {
    private readonly string[] fontSizes = { "text-sm", "text-base", "text-lg" };
    private readonly string[] fontWeights = { "font-normal", "font-semibold", "font-bold" };
    private int fontSizeIndex = 1;
    private int fontWeightIndex = 0;
    public string ChatFontClass => $"{fontSizes[fontSizeIndex]} {fontWeights[fontWeightIndex]}";

    public void SetFontSize(int idx)
    {
        fontSizeIndex = idx;
        StateHasChanged();
    }
    public void SetFontWeight(int idx)
    {
        fontWeightIndex = idx;
        StateHasChanged();
    }
}

<div class="min-h-screen h-screen flex flex-col bg-[#2D2A2E] overflow-hidden">
    <Header FontSizeIndex="@fontSizeIndex" FontWeightIndex="@fontWeightIndex" OnFontSizeChanged="SetFontSize" OnFontWeightChanged="SetFontWeight" />
    <main class="flex-1 flex flex-col px-0 sm:px-4 py-4 sm:py-6 text-slate-300 overflow-hidden min-h-0">
        <div class="flex-1 flex flex-col min-h-0">
            <div class="max-w-4xl mx-auto flex-1 flex flex-col w-full min-h-0">
                <CascadingValue Value="ChatFontClass">
                    @Body
                </CascadingValue>
            </div>
        </div>
    </main>
    <footer class="bg-[#222327]/80 backdrop-blur-sm border-t border-[#3b3a3f] p-4 text-xs text-slate-500">
        <div class="max-w-4xl mx-auto w-full flex justify-between">
            <span>© @DateTime.Now.Year ItsAllSemantics</span>
            <span class="opacity-60">Monokai Pro inspired</span>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
