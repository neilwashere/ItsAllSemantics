@inherits LayoutComponentBase

<Header />

<main class="flex-1 overflow-y-auto container mx-auto px-4 py-6">
    @Body

</main>

<footer class="bg-slate-800/50 backdrop-blur-sm p-4 mt-auto">
    <div class="container mx-auto text-xs text-slate-400">
        <span>© @DateTime.Now.Year ItsAllSemantics</span>
    </div>
</footer>

